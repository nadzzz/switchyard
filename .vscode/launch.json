{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Switchyard",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/switchyard",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "args": []
        },
        {
            "name": "Launch Switchyard (Local)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/switchyard",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "args": ["--config", "configs/switchyard.local.yaml"]
        },
        {
            "name": "Aspire — Cloud (OpenAI)",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/aspire/Switchyard.AppHost/Switchyard.AppHost.csproj",
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Aspire — Local Machine (Docker)",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/aspire/Switchyard.AppHost/Switchyard.AppHost.csproj",
            "args": ["--localmachine"],
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Aspire — Local Network (nadznas)",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/aspire/Switchyard.AppHost/Switchyard.AppHost.csproj",
            "args": ["--localnetwork"],
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            }
        }
    ]
}
