# Switchyard Environment Variables
# Copy this file to .env at the project root and fill in your values.
# Never commit .env to version control.

# --- Interpreter ---
# Backend: "openai" or "local"
SWITCHYARD_INTERPRETER_BACKEND=openai

# OpenAI API key (required if backend=openai)
OPENAI_API_KEY=sk-your-openai-api-key-here

# --- Targets ---
# Home Assistant long-lived access token
HA_TOKEN=your-home-assistant-token-here

# --- Logging ---
SWITCHYARD_LOGGING_LEVEL=info
SWITCHYARD_LOGGING_FORMAT=json

# --- Server ---
SWITCHYARD_SERVER_HEALTH_PORT=8081

# --- Transports ---
SWITCHYARD_TRANSPORTS_GRPC_PORT=50051
SWITCHYARD_TRANSPORTS_HTTP_PORT=8080
